<style>
  /* LIGHT MODE (default) */
  .blog-content pre {
    background: var(--bs-tertiary-bg);
    color: var(--bs-body-color);
}

  body {
    background-color: #f8f9fa;
    color: black;
  }

  /* DARK MODE */
  body.dark-mode {
    background-color: #0d1117;
    color: white;
  }

  /* Glass dark cards */
  body.dark-mode .card {
    background: rgba(30, 30, 30, 0.6);
    backdrop-filter: blur(10px);
    -webkit-backdrop-filter: blur(10px);

    color: white;
    border: 1px solid rgba(255, 255, 255, 0.1);
  }
  /* ROUND TOGGLE BUTTON */

  #themeToggle {
    position: fixed;
    bottom: 20px;
    right: 20px;

    width: 50px;
    height: 50px;

    border-radius: 50%;
    border: none;

    display: flex;
    align-items: center;
    justify-content: center;

    font-size: 22px;

    background: black;
    color: white;

    cursor: pointer;
    transition: all 0.3s ease;
  }

  body.dark-mode #themeToggle {
    background: white;
    color: black;
  }
  body, .card {
    transition: background-color 0.3s ease, color 0.3s ease;
}
</style>
