<!DOCTYPE html>
<html lang="en">

<head>
    <%- include("./partials/head") %>
        <title>
            Add Blog
        </title>

</head>

<body>

    <%- include("./partials/nav") %>

        <div class="container my-5">

            <div class="row justify-content-center">

                <div class="col-lg-8">

                    <!-- BLOG HEADER -->
                    <div class="mb-4 text-center">

                        <h1 class="fw-bold display-5">
                            <%= blog.title %>
                        </h1>
                    </div>
                    <div class="mb-4">
                        By,<h5>
                            <%=blog.createdBy.name%>
                        </h5>

                    </div>

                    <!-- COVER IMAGE -->
                    <% if(blog.coverImg){ %>
                        <div class="mb-4">
                            <img src="<%= blog.coverImg %>" class="img-fluid rounded shadow-sm"
                                style="max-height:400px; object-fit:cover; width:100%;">
                        </div>
                        <% } %>

                            <!-- BLOG CONTENT -->
                            <div class="blog-content">

                                <div id="blogContent"></div>

                            </div>
                            <% if (locals.user) { %>
                                <div>
                                    <form action='/blog/comment/<%= blog._id %>' method="POST">
                                        <div class="input-group mb-3">
                                            <input type="text" class="form-control" placeholder="Enter Comment..."
                                                aria-describedby="content" id='content' name="content">
                                            <button class="btn btn-outline-success" type="submit">Comment</button>
                                        </div>
                                    </form>
                                </div>
                                <% } %>
                                    <div>
                                        <h2 class="m-3">Comments ðŸ“©</h2>
                                        <% comments.forEach(element=> { %>

                                            <div class="card border-warning m-3">

                                                <div class="card-header border-success d-flex justify-content-between">

                                                    <div>
                                                        <img src="/images/defualt.jpg" width="25px"
                                                            class="me-3 rounded-circle">
                                                        <%= element.createdBy.name %>
                                                    </div>

                                                    <% if(locals.user &&
                                                        (locals.user._id.toString()===element.createdBy._id.toString()
                                                        || locals.user._id.toString()===blog.createdBy._id.toString()))
                                                        { %>

                                                        <form action="/blog/comment/delete/<%= element._id %>"
                                                            method="POST">
                                                            <button class="btn btn-sm btn-danger">Delete</button>
                                                        </form>

                                                        <% } %>

                                                </div>

                                                <div class="card-body">
                                                    <p class="card-text mx-2">
                                                        <%= element.content %>
                                                    </p>
                                                </div>

                                            </div>

                                            <% }) %>

                                    </div>

                </div>

            </div>

        </div>

        <!-- Markdown Renderer -->
        <script src="https://cdn.jsdelivr.net/npm/marked/marked.min.js"></script>

        <script>
            document.getElementById("blogContent").innerHTML =
                marked.parse(`<%- blog.body %>`);
        </script>

        <!-- RELATED BLOGS SECTION -->
        <div class="mt-5 mx-4">

            <h3 class="mb-4">More Blogs</h3>

            <div class="row g-4">

                <% blogs.forEach(element=> { %>

                    <div class="col-sm-12 col-md-6 col-lg-4">

                        <div class="card h-100 shadow-sm border-0">

                            <img src="<%= element.coverImg %>" class="card-img-top"
                                style="height:250px; object-fit:cover;">

                            <div class="card-body d-flex flex-column">

                                <h5 class="card-title text-center">
                                    <%= element.title.split('"')[0] %>
                                </h5>

                                <p class="card-text flex-grow-1">
                                    <%= element.body.substring(0,120) %>...
                                </p>

                                <a href="/blog/<%= element._id %>" class="btn btn-dark mt-auto">
                                    Read
                                </a>

                            </div>

                        </div>

                    </div>

                    <% }); %>

            </div>

        </div>

        </div>

        <%- include("./partials/footer") %>
            <%- include("./partials/script") %>

</body>

</html>