<!DOCTYPE html>
<html lang="en">

<head>
    <%- include("./partials/head") %>
    <title>My Blogs</title>
</head>

<body>

<%- include("./partials/nav") %>

<div class="container my-5">

    <!-- PAGE TITLE -->
    <h2 class="text-center fw-bold mb-4">My Blogs</h2>

    <div class="row g-4">

        <% blogs.forEach(element => { %>

            <div class="col-sm-12 col-md-6 col-lg-4">

                <div class="card h-100 shadow-sm border-0">

                    <!-- Image -->
                    <img 
                        src="<%= element.coverImg %>" 
                        class="card-img-top"
                        style="height:200px; object-fit:cover;"
                    >

                    <div class="card-body d-flex flex-column">

                        <!-- Title -->
                        <h5 class="card-title text-center">
                            <%= element.title.split('"')[0] %>
                        </h5>

                        <!-- Preview -->
                        <p class="card-text flex-grow-1">
                            <%= element.body.substring(0,120) %>...
                        </p>

                        <!-- Read button -->
                        <a href="/blog/<%= element._id %>" 
                           class="btn btn-dark mb-2">
                           Read
                        </a>

                        <!-- Actions -->
                        <div class="d-flex justify-content-between">

                            <form action="/blog/edit/<%= element._id %>" method="GET">
                                <button 
                                   type="submit"
                                   onclick="return confirm('Edit this blog?')"
                                   class="btn btn-outline-primary btn-sm">
                                   Edit
                                </button>
                            </form>

                            <form action="/blog/delete/<%= element._id %>" method="POST">
                                <button 
                                   type="submit"
                                   onclick="return confirm('Delete this blog?')"
                                   class="btn btn-outline-danger btn-sm">
                                   Delete
                                </button>
                            </form>

                        </div>

                    </div>

                </div>

            </div>

        <% }); %>

    </div>

</div>

<%- include("./partials/footer") %>
<%- include("./partials/script") %>

</body>
</html>
